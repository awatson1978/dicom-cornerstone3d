# DICOM Viewer v3 Configuration
# Copy this to .env and modify as needed

# Application Settings
APP_NAME="DICOM Viewer v3"
APP_VERSION="1.0.0"
NODE_ENV="development"

# Server Configuration
PORT=3000
ROOT_URL="http://localhost:3000"
MONGO_URL="mongodb://localhost:27017/dicomviewer"

# DICOM Performance Settings
DICOM_MEMORY_LIMIT="512MB"
DICOM_PREFETCH_STRATEGY="balanced"
DICOM_CACHE_SIZE="2GB"
DICOM_CONCURRENT_REQUESTS=6
DICOM_ENABLE_GPU=true
DICOM_WORKER_COUNT=4

# Cache Configuration
CACHE_MAX_SIZE_MB=2048
CACHE_CLEANUP_INTERVAL_HOURS=24
CACHE_TTL_HOURS=168

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_LEVEL="info"
BENCHMARK_MODE=false

# Security Settings
ENABLE_CORS=true
CORS_ORIGIN="http://localhost:3000,http://localhost:4000"
MAX_UPLOAD_SIZE_MB=100
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Database Settings
DB_CLEANUP_INTERVAL_HOURS=6
DB_MAX_STUDIES_PER_USER=50

# Development Settings (development only)
DEBUG_DICOM_PARSING=false
DEBUG_CACHE_OPERATIONS=false
DEBUG_PERFORMANCE=false
DEBUG_STREAMING=false

# Production Settings (production only)
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"
# CDN_URL="https://cdn.example.com"